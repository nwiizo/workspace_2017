KUBELET_ADDRESS="--address=0.0.0.0"
KUBELET_PORT="--port=10250"
KUBELET_HOSTNAME="--hostname-override={{ inventory_hostname }}"
KUBELET_NETWORK="--network-plugin=cni --cni-conf-dir=/etc/cni/net.d --cni-bin-dir=/opt/cni/bin"
KUBELET_MANIFESTS="--pod-manifest-path=/etc/kubernetes/manifests"
KUBELET_CONFIG="--require-kubeconfig=true --kubeconfig=/etc/kubernetes/kubelet.kubeconfig"

# this requires ansible machine has python-netaddr installed
KUBE_DNS="--cluster-domain={{ cluster_name }} --cluster-dns={{ dns_server }}"

KUBELET_ARGS="--register-node=true"